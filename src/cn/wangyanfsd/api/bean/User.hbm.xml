<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.wangyanfsd.api.bean">
	<class name="User" table="tb_User">
		<id name="Id" column="Id" type="java.lang.Integer">
			<generator class="native"></generator>  
		</id>
		<property name="userName" column="userName" type="java.lang.String" length="20"/>
		<property name="passWord" column="passWord" type="java.lang.String" length="20"/>
		<property name="identity" column="identity" type="java.lang.String" length="20"/>
	</class>
</hibernate-mapping>
